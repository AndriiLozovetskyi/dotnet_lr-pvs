@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Відправлення повідомлення</h1>


@model dotnet_site_project.Models.SendEmailViewModel


@using (Html.BeginForm(actionName: "Index", controllerName: "Mail"))
{
    @Html.ValidationSummary(true, "Сталася помилка під час відправки. Перевірьте введегні дані")
    <div>
        <fieldset>
            <legend>Mail data input</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.EmailTo)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.EmailTo)
                @Html.ValidationMessageFor(m => m.EmailTo)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Message)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.Message)
                @Html.ValidationMessageFor(m => m.Message)
            </div>
            <p>
                <input type="submit" value="Send" />
            </p>
        </fieldset>
    </div>
}

</div>
